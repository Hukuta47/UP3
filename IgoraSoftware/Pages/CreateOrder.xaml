<Page x:Class="IgoraSoftware.Pages.CreateOrder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IgoraSoftware.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateOrder">

	<Grid>
		<StackPanel>
			<TextBlock Text="Код клиента"/>
			<ComboBox Name="ComboBox_CodeEnter" IsEditable="True" DisplayMemberPath="Code"/>
			<TextBlock Text="Услуги"/>
			<DataGrid Name="DataGrid_ListServices" Style="{StaticResource DataGridNoSelect}" Height="150" AutoGenerateColumns="False" IsReadOnly="True" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserSortColumns="False">
				<DataGrid.Columns>
					<DataGridTemplateColumn>
						<DataGridTemplateColumn.CellTemplate>
							<DataTemplate>
								<CheckBox Click="CheckBox_Click" IsChecked="{Binding IsChecked}"/>
							</DataTemplate>
						</DataGridTemplateColumn.CellTemplate>
					</DataGridTemplateColumn>
					<DataGridTextColumn Header="Название услуги" Width="1*" Binding="{Binding NameService}"/>
					<DataGridTextColumn Header="Стоимость" Width="1*" Binding="{Binding PricePerHourService, StringFormat=F2}"/>
				</DataGrid.Columns>
			</DataGrid>
			<Button Content="Создать заказ"/>
		</StackPanel>
	</Grid>
</Page>
