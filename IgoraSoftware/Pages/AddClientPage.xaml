<Page x:Class="IgoraSoftware.Pages.AddClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IgoraSoftware.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="635" d:DesignWidth="800"
      Title="AddClientPage">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<ScrollViewer Grid.Row="0">
			<StackPanel>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="200"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>

					<TextBlock Text="ФИО  " Width="140" HorizontalAlignment="Right" FontSize="16" FontFamily="Comic Sans MS" VerticalAlignment="Center" Grid.Column="0" TextAlignment="Right"/>
					<TextBox Name="TextBox_IDServieEnter" Grid.Column="1"/>
				</Grid>
				<Rectangle Height="10"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="200"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>

					<TextBlock Text="Код  " TextAlignment="Right" FontSize="16" Width="140" FontFamily="Comic Sans MS" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0"/>
					<TextBox Name="TextBox_NameServiceEnter" Grid.Column="1"/>
				</Grid>
				<Rectangle Height="10"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="200"/>
						<ColumnDefinition Width="1*"/>
						<ColumnDefinition Width="1*"/>
					</Grid.ColumnDefinitions>

					<TextBlock Text="Паспорт (серия, номер)  " TextAlignment="Right" FontSize="16" FontFamily="Comic Sans MS" VerticalAlignment="Center" Grid.Column="0" Height="23" Margin="2,0,3,0"/>
					<TextBox  Name="TextBox_CodeServiceEnter" Grid.ColumnSpan="2" Margin="198,0,0,0"/>
					<TextBox  Name="TextBox_CodыeServiceEnter" Grid.Column="2" Margin="7,0,0,0"/>
				</Grid>
				<Rectangle Height="10"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="200"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>

					<TextBlock Text="Дата рождения  " HorizontalAlignment="Right" TextAlignment="Right" FontSize="16" Width="140" FontFamily="Comic Sans MS" VerticalAlignment="Center" Grid.Column="0"/>
					<DatePicker Name="TextBox_PricePerHourServiceEnter" Grid.Column="1"/>

				</Grid>
				<Rectangle Height="10"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="200"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>

					<TextBlock Text="Адрес  " HorizontalAlignment="Right" TextAlignment="Right" FontSize="16" Width="140" FontFamily="Comic Sans MS" VerticalAlignment="Center" Grid.Column="0"/>
					<TextBox Name="TextBox_PricesPerHourServiceEnter" Grid.Column="1"/>
				</Grid>
				<Rectangle Height="10"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="200"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>

					<TextBlock Text="Почта  " HorizontalAlignment="Right" TextAlignment="Right" FontSize="16" Width="140" FontFamily="Comic Sans MS" VerticalAlignment="Center" Grid.Column="0"/>
					<TextBox Name="TextBox_PricesPыerHourServiceEnter" Grid.Column="1"/>
				</Grid>
				<Rectangle Height="10"/>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="200"/>
						<ColumnDefinition/>
					</Grid.ColumnDefinitions>

					<TextBlock Text="Пароль  " HorizontalAlignment="Right" TextAlignment="Right" FontSize="16" Width="140" FontFamily="Comic Sans MS" VerticalAlignment="Center" Grid.Column="0"/>
					<TextBox Name="TextBox_PricesPerHвourServiceEnter" Grid.Column="1"/>
				</Grid>

				
			</StackPanel>
		</ScrollViewer>
		<StackPanel Grid.Row="1" Orientation="Horizontal">
			<Button Content="Добавить клиента в базу данных" Click="AddClient_Click" HorizontalAlignment="Center"/>
			<Rectangle Width="10"/>
			<Button Content="Назад" Background="#004433" Click="Back_Click"/>
		</StackPanel>
	</Grid>
</Page>
