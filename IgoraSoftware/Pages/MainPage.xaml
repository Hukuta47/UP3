<Page x:Class="IgoraSoftware.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IgoraSoftware.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="MainPage">

    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="77"/>
			<RowDefinition Height="8*"/>
			<RowDefinition Height="48"/>
		</Grid.RowDefinitions>
		
		<TextBlock Text="00:00" Grid.Row="0"/>

		<Rectangle Grid.Row="0" Fill="Green"/>
		<TextBlock Grid.Row="0" Name="TextBlock_TitleWelcomeText" Text="Добро пожаловать Пользователь!" FontSize="32" FontFamily="Comic Sans MS" Foreground="White" VerticalAlignment="Center" Margin="32,0,0,0" />
		
		<Frame Name="Frame_UserPages" Grid.Row="1" />
		
		<Rectangle Grid.Row="2" Fill="Green"/>
		<TextBlock Grid.Row="2" Name="TextBlock_TimeSession" Text="Оставшеевся время сеанса: 00:00" FontSize="20" FontFamily="Comic Sans MS" Foreground="White" VerticalAlignment="Center" Margin="16,0,0,0" />

	</Grid>
</Page>
