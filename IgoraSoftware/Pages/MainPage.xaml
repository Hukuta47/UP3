<Page x:Class="IgoraSoftware.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IgoraSoftware.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="8*"/>
			<RowDefinition Height="1*"/>
		</Grid.RowDefinitions>
		
		<TextBlock Name="TextBlock_TimeSession" Text="00:00" Grid.Row="0"/>
		<Rectangle Grid.Row="0" Fill="Green"/>
		<Grid Margin="16">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="auto"/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>

			<Rectangle Grid.Column="0" Fill="White" Width="32" Height="32"/>


		</Grid>
		<Frame Name="Frame_UserPages" Grid.Row="1"/>
	</Grid>
</Page>
