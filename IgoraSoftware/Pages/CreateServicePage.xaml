<Page x:Class="IgoraSoftware.Pages.CreateServicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IgoraSoftware.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateServicePage">

	<Grid Margin="10">

		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		
		<StackPanel>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>

				<TextBlock Text="ID Услуги  " Width="140"  FontSize="16" FontFamily="Comic Sans MS" VerticalAlignment="Center" Grid.Column="0" TextAlignment="Right"/>
				<TextBox Name="TextBox_IDServieEnter" Grid.Column="1"/>
			</Grid>
			<Rectangle Height="10"/>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>

				<TextBlock Text="Название услуги  " TextAlignment="Right" FontSize="16" Width="140" FontFamily="Comic Sans MS" VerticalAlignment="Center" Grid.Column="0"/>
				<TextBox Name="TextBox_NameServiceEnter" Grid.Column="1"/>
			</Grid>
			<Rectangle Height="10"/>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>

				<TextBlock Text="Код услуги  " TextAlignment="Right" FontSize="16" Width="140" FontFamily="Comic Sans MS" VerticalAlignment="Center" Grid.Column="0"/>
				<TextBox  Name="TextBox_CodeServiceEnter" Grid.Column="1"/>
			</Grid>
			<Rectangle Height="10"/>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition/>
				</Grid.ColumnDefinitions>

				<TextBlock Text="Цена за час  " TextAlignment="Right" FontSize="16" Width="140" FontFamily="Comic Sans MS" VerticalAlignment="Center" Grid.Column="0"/>
				<TextBox Name="TextBox_PricePerHourServiceEnter" Grid.Column="1"/>
			</Grid>
			<Rectangle Height="10"/>


			
		</StackPanel>
		<StackPanel Orientation="Horizontal" Grid.Row="1">
			<Button Name="Button_CreteService" Grid.Row="1" Content="Создать услугу" Click="Button_CreteService_Click" HorizontalAlignment="Center"/>
			<Rectangle Width="10"/>
			<Button Content="Отмена" Click="Back_Click" Background="#004433"/>
		</StackPanel>
	</Grid>
</Page>
